@model List<TodoListApp.Models.TodoItem>

<!DOCTYPE html>
<html>
<head>
  <title>Todo List</title>
  <style>
    body, html {
      height: 100%;
      width: 100vw;
      margin: 0;
      overflow-x: hidden; /* Prevent scrolling along the x-axis */
      display: flex;
      flex-direction: column;
    }
    .flex-container {
      display: flex;
      flex-direction: column;
      flex-grow: 1;
      position: relative;
    }
    .flex-item {
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
    .full-width {
      width: 100vw !important;
    }
    .center-content {
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
    }
    .center-text {
      text-align: center;
    }
    .navbar, .footer {
      background-color: #f8f9fa;
      padding: 1rem;
      position: absolute;
      width: 100vw !important;
    }
    .navbar {
      top: 0;
    }
    .footer {
      bottom: 0;
    }
    .form-inline {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: 4rem; /* Adjust margin as needed */
      width: 100%; /* Full width of the screen */
    }
    .form-control {
      margin-right: 0.5rem;
      flex-grow: 1; /* Allow input to grow */
    }
    .list-group-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100vw; /* Fixed width of the screen */
    }
    .completed-title {
      opacity: 0.3;
      text-decoration: line-through;
    }
    .btn {
      padding: 0.5rem 1rem;
      border: none;
      cursor: pointer;
    }
    .btn-primary {
      background-color: #007bff;
      color: white;
    }
    .btn-danger {
      background-color: #dc3545;
      color: white;
    }
  </style>
</head>
<body>
  <nav class="navbar full-width center-content center-text">
    <a class="navbar-brand" href="#">Todo List</a>
  </nav>

  <form asp-action="Add" method="post" class="form-inline">
    <input type="text" name="Title" class="form-control" placeholder="Add new item" required />
    <button type="submit" class="btn btn-primary">Add</button>
  </form>
  
  <div class="flex-container">
    <div class="container mt-4 full-width flex-item">
      <ul class="list-group mt-4">
        @foreach (var item in Model)
        {
          <li class="list-group-item">
            <div>
              <form asp-action="Toggle" method="post" class="d-inline">
                <input type="hidden" name="id" value="@item.Id" />
                <input type="checkbox" name="IsCompleted" value="true" @(item.IsCompleted ? "checked" : "") onchange="this.form.submit()" />
                <span class="@(item.IsCompleted ? "completed-title" : "")">@item.Title</span>
              </form>
            </div>
            <div>
              <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" name="id" value="@item.Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </li>
        }
      </ul>
    </div>
  </div>

  <footer class="footer full-width center-content center-text">
    <div class="container">
      <span class="text-muted">Â© 2023 Todo List App</span>
    </div>
  </footer>
</body>
</html>