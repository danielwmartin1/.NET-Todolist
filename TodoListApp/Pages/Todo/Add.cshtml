@page
@model TodoListApp.Pages.Todo.AddModel
@{
    ViewData["Title"] = "Add Todo";
}

<h1>Add Todo</h1>

<form id="create-todo-form" onsubmit="return false;">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" required>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>

<h2>Todo List .NET</h2>
<ul id="todo-list"></ul>

<script src="/wwwroot/js/main.js"></script> <!-- Ensure the script is included -->
